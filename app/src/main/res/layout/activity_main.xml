<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andrej.simple.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/knowthecinema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:onClick="getPremier"
            android:text="cinema"
            app:layout_constraintEnd_toStartOf="@+id/knowtheweather" />

        <Button
            android:id="@+id/knowtheweather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="getWeather"
            android:text="weather"
            tools:layout_editor_absoluteX="100dp" />

        <Button
            android:id="@+id/eagle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="getEagle"
            android:text="Button" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
